{
  "extends": "../../tsconfig.node.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2020",
    "outDir": "../../dist/scripts",
    "rootDir": "..",
    "composite": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["../**/*.ts"],
  "exclude": ["node_modules"]
}
